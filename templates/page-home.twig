{% extends "base.twig" %}
{% block content %}


<div class="container-fluid">

	<section id="banner" role="banner">
		<div class="row">
			<div class="col-sm-12 banner-container d-flex flex-column justify-content-center" style="background: url('{{ TimberImage(post.get_field("banner_image")).src }}') no-repeat center center;"> 
				<h1 id="site-title">{{site.title}}</h1>
				<h3 id="site-tagline">{{site.description}}</h3>
				<div class="row justify-content-end" id="header-button-container">
					{# <div class="col-sm ml-auto d-flex flex-row justify-content-end" id="header-button-container"> #}
						{# <a href="#portfolio" class="btn btn-warning">See my work</a> #}
						<a href="mailto:{{options.email_address}}" class="btn btn-warning">Let's build something</a>
					{# </div> #}
				</div>
				
			</div>
		</div>
	</section>

	<section id="bio" role="bio">
		<div class="row align-items-center">

			<div class="col-sm-12 col-md-6 ml-auto text-center">
				{% set profile_pic = TimberImage(options.profile_pic) %}
				<img src="{{profile_pic.src}}" alt="{{profile_pic.alt}}" class="bio-image" />
				<p class="caption">
					{% if options.bio_keywords %}
						{% for keyword in options.bio_keywords %}
							{% if loop.last %}
								{{keyword.keyword}}
							{% else %}
								{{keyword.keyword}} | 
							{% endif %}
						{% endfor %}
					{% endif %}
				</p>
			</div>

			<div class="col-sm-12 col-md-6 ml-auto" id="bio-text">
				<p><span class="first-sentence">{{options.bio.first_sentence}}</span> {{options.bio.rest_of_bio}}</p>
				<div class="text-center"><a href="mailto:{{options.email_address}}" class="btn btn-warning">Get Started</a></div>
			</div>

		</div>
	</section>

	<section id="portfolio" role="portfolio">
		<div class="row justify-content-around">
			<div class="col-sm-12"><h2 class="section-title">Portfolio</h2></div>

				{% for website in options.full_websites %}
					<div class="col col-sm-12 col-md-5">
						<div class="portfolio-open" data-title="{{website.website_name}}" data-image="{{TimberImage(website.snapshot).src}}" data-url="{{website.url}}" data-description="{{website.description}}">
							<div class="portfolio-item" style="background: url('{{TimberImage(website.snapshot).src}}') no-repeat">
								<div class="portfolio-info d-flex justify-content-center align-items-center">
									<h2 class="portfolio-site-title">{{website.website_name}}</h2>
								</div>
							</div>
						</div>
					</div>
					
					
				{% endfor %}
			

		</div>
	</section>

	<section id="testimonial" role="testimonials">
		<div class="row justify-content-around">
			{# <div class="col-sm-12"><h2 class="section-title">Testimonials</h2></div> #}

			<div class="col-sm-12 col-md-7">
				<i class="fas fa-quote-left fa-4x testimonial-quote-icon"></i>
				<p class="testomial-text">This is a really nice quote from one of my friends who says I do good work.</p>
			</div>
			<div class="col-sm-12 col-md-4">
				<div class="testimonial-source">
					<p id="testimoial-person">Austin Bauman</p>
					<p id="testimoial-role">Owner</p>
					<p id="testimoial-company">Greenfleet Bicycle Shop</p>
				</div>
			</div>
		</div>
	</section>
	
</div>

<div class="modal fade" id="portfolio-modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-body">
				<div class="container-fluid">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<a class="modal-site-url" href="" target="_blank">
						<img class="modal-site-image" src="" />
					</a>
					<a class="modal-site-url" href="" target="_blank">
						<h4 id="modalLabel" class="modal-site-title"></h4>
					</a>
						
					<p class="modal-site-description"></p>
					
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}